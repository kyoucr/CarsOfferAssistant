<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qinshou.administrator.carsofferassistant.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:titleTextColor="#FFFFFF">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/content_fm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cdcdcd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_models_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_models_bt"
            android:onClick="chooseFragment"
            android:text="@string/select_models" />

        <Button
            android:id="@+id/independent_car_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/independent_car_bt"
            android:onClick="chooseFragment"
            android:text="@string/independent_car" />

        <Button
            android:id="@+id/price_reduction_zone_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/price_reduction_bt"
            android:onClick="chooseFragment"
            android:text="@string/price_reduction_zone" />

        <Button
            android:id="@+id/my_garage_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_garage_bt"
            android:onClick="chooseFragment"
            android:text="@string/my_garage" />

    </LinearLayout>
</LinearLayout>
